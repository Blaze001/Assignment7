/**
 * 
 */

/**
 * @author Mitchell VanEss
 *
 */
public class tasteTea  {
static Boolean badTaste = false;
private static tasteTea tester;

	/**
	 * @return 
	 * 
	 */
	public void tasteTea() throws TeaException {
		// TODO Auto-generated constructor stub
		
		if (badTaste == false){
			System.out.println("This tea is just right.");
			System.out.println("Setting badTaste to false.");
		}
		if(badTaste == true){
			
			System.out.println("Setting badTaste to true.");
			throw new TeaException("The tea tastes bad.");
		}
		}
		
	
	public static void testTea(){
		try{
			tester.tasteTea();

			
		} catch(TeaException e){
			System.err.println(e.getMessage());
			e.printStackTrace();
		}
		finally {
			System.out.println("May I have another cup?");
		}
		
	}

	

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		tester = new tasteTea();
 badTaste = false;
testTea();
	}

}
